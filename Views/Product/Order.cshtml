@model IEnumerable<testmongo.Models.Order>
@{ ViewBag.Title = "Employee Details"; }

<h3 style="text-align:center">Orders</h3>


@using (Html.BeginForm("Order", "Product", FormMethod.Get))
{
<div class="row form-group">
    <div class="col-lg-12">

        <p>
            Title: @Html.TextBox("SearchString")
        </p>

        <div class="col-md-4">
            <button type="submit" class="btn btn-success">Tìm kiếm</button>
        </div>
    </div>
</div>}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipMobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipEmail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ShipName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShipMobile)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShipAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShipEmail)
    </td>
    <td>
        @Html.ActionLink("Detail", "Detail", new { id = item.Id })
    </td>
</tr>}

</table>

