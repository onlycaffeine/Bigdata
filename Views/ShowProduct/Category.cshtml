@model List<testmongo.Models.ProductViewModel>
@{
    var category = (testmongo.Models.ProductCategory)ViewBag.Category;
    ViewBag.Title = category.CategoryName;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Danh sách sản phẩm</h3>
        </div>
        @*<div class="sort">
                <p>
                    Sắp xếp theo:
                    <select>
                        <option>Giá thấp nhất</option>
                        <option>Giá cao nhất</option>>
                        <option>Có sẵn</option>
                    </select>
                </p>
            </div>
            <div class="show">
                <p>
                    Hiển thị:
                    <select>
                        <option>4</option>
                        <option>8</option>
                        <option>12</option>
                        <option>16</option>
                        <option>20</option>
                        <option>Có sẵn</option>
                    </select>
                </p>
            </div>*@
        @*<div class="page-no">
                <p>
                    Trang:<ul>
                        <li><a href="#">1</a></li>
                        <li class="active"><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li>[<a href="#"> Next>>></a>]</li>
                    </ul>
                </p>
            </div>*@
        <div class="clear"></div>
    </div>

    <div class="section group">
        @foreach (var item in Model)
        {
            var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;

            <div class="grid_1_of_4 images_1_of_4">
                <a href="@link"><img src="@item.Images" width="170" alt="" /></a>
                @*<h2>@item.Name</h2>*@
                <span>@item.CateName</span>
                <p><span class="price">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                @*<div class="button"><span><img src="/Assets/Client/images/cart.jpg" alt="" /><a href="/gio-hang/@item.ID" class="cart-button">Thêm vào giỏ</a></span> </div>*@
                <div><a href="@link" class="details">Xem chi tiết</a></div>
            </div>
        }
        <div class="clear"></div>
        <!--Phân trang-->
        @if (ViewBag.TotalPage > 1)
        {
            var pageDisplay = (int)ViewBag.MaxPage;
            int totalPage = (int)ViewBag.TotalPage;
            int currentPage = ((int)ViewBag.Page);

            // Create numeric links
            var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
            var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

            var link = "/san-pham/" + category.MetaTitle + "-" + category.Id;
            <nav>
                <ul class="pagination">
                    @if (currentPage > ViewBag.First)
                    {
                        <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                        <li>
                            <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                        </li>

                    }
                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (currentPage == i)
                        {

                            <li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>
                        }
                    }
                    @if (currentPage < totalPage)
                    {
                        <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                        <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                    }

                </ul>
            </nav>

        }
        else
        {
            <span>Không có bản ghi nào</span>
        }
    </div>
</div>
