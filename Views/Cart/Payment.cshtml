@model List<testmongo.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout0.cshtml";
}


<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Id</td>
                            <td>@item.Product.ProductName</td>
                            <td><img src="@item.Product.ProductImage" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.Id" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.ToString("N0")</td>
                            <td>@((item.Product.Price * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.Id" class="btn-delete">Xoá</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        }

    </div>
    <div class="section group">
        <div class="col-md-6">
            @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
            {

                var session = Session[testmongo.Areas.Common.CommonConstants.USER_SESSION];

                if (session == null)
                {
                    <a href="dang-nhap">
                        Đăng nhập
                    </a>
                }
                else
                {
                    <div class="form-group">
                        <label>Người nhận</label>
                        <input name="shipName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        <input name="mobile" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input name="address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" class="form-control" />
                    </div>

                    <div>
                        <button type="submit" class="btn">Gửi đơn hàng</button>
                    </div>
                }

            }
        </div>

    </div>
</div>
